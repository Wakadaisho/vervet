{
  "name": "vervet",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:http": "next dev",
    "dev:https": "next dev --experimental-https",
    "build": "next build",
    "start": "next start",
    "prod": "next build && next start",
    "lint": "next lint",
    "drizzle:generate": "drizzle-kit generate:pg",
    "drizzle:push": "drizzle-kit push:pg",
    "drizzle:drop": "drizzle-kit drop",
    "drizzle:studio": "drizzle-kit studio",
    "drizzle:migrate": "pnpm run drizzle:generate && pnpm run drizzle:push",
    "drizzle:seed": "pnpm run drizzle:migrate && node --loader esbuild-register/loader -r esbuild-register ./lib/db/seed.ts",
    "web-push": "web-push",
    "tests:api": "playwright test --config=api.config.ts",
    "tests:report": "pnpm exec playwright show-report"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^0.3.4",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@next/env": "^13.5.6",
    "@onesignal/node-onesignal": "2.0.1-beta2",
    "@types/web-push": "^3.6.2",
    "drizzle-orm": "^0.28.6",
    "drizzle-zod": "^0.5.1",
    "next": "13.5.6",
    "next-auth": "^4.24.3",
    "pg": "^8.11.3",
    "react": "^18",
    "react-dom": "^18",
    "react-onesignal": "^3.0.1",
    "theme-change": "^2.5.0",
    "web-push": "^3.6.6",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.2.0",
    "@playwright/test": "^1.39.0",
    "@tailwindcss/forms": "^0.5.6",
    "@types/node": "^20",
    "@types/pg": "^8.10.7",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10",
    "daisyui": "^3.9.3",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.19.13",
    "esbuild-register": "^3.5.0",
    "eslint": "^8",
    "eslint-config-next": "13.5.6",
    "postcss": "^8",
    "tailwindcss": "^3",
    "typescript": "^5"
  }
}
